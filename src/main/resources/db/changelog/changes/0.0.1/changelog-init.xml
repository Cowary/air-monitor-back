<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="cowary" id="1-create-agent">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="agent"/>
            </not>
        </preConditions>
        <createTable tableName="agent">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="ip_address" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="port" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_ts" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_ts" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="cowary" id="2-create-health_history">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="health_history"/>
            </not>
        </preConditions>
        <createTable tableName="health_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_healthy" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="agent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_ts" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_ts" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="health_history"
                baseColumnNames="agent_id"
                constraintName="fk_health_history_agent"
                referencedTableName="agent"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
